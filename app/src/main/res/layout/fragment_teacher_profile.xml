<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:id="@+id/profile_image"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/profile"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="1dp"
        app:civ_shadow_color="@android:color/black"
        app:civ_shadow_radius="1.0" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:padding="15dp"
        android:text="Name:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="247dp"

        android:padding="15dp"
        android:text="Branch:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_marginStart="106dp"
        android:text="Saajan Kumar Jha"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/dobv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/branch"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="20-12-1998"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/branch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="128dp"
        android:padding="5dp"
        android:text="D.O.B:"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/cmpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/branch"
        android:layout_alignStart="@+id/name2"
        android:text="CMPN"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="297dp"
        android:padding="15dp"
        android:text="Mobile:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numr"
        android:layout_width="125dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@id/num"
        android:layout_alignStart="@+id/name2"
        android:layout_alignBottom="@+id/cmpn"
        android:text="8080592443"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="347dp"
        android:padding="15dp"
        android:text="E-mail:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mailv"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignBaseline="@id/mail"
        android:layout_alignStart="@+id/name2"
        android:text="saajanjha@gmail.com"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="397dp"
        android:padding="15dp"
        android:text="Position:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/designation_value"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/designation"
        android:layout_alignStart="@+id/name2"
        android:text="Assitant Professor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/post"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_edit_black_24dp"
        app:fabSize="normal" />

</RelativeLayout>